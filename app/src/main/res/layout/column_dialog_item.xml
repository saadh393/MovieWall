<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:padding="5dp">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Choose Column"
        android:textSize="26sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:textColor="#393838"

        />

    <RelativeLayout
        android:id="@+id/One_R"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/img_one"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:srcCompat="@drawable/two_grid" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/img_one"
            android:text="2"
            android:textSize="27sp"
            android:textColor="#D0423F3F" />

    </RelativeLayout>

    <View
        android:id="@+id/viewOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#D0616161"
         />

    <RelativeLayout
        android:id="@+id/Two_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/img_two"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:srcCompat="@drawable/three_grid" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/img_two"
            android:text="3"
            android:textSize="27sp"
            android:textColor="#D0423F3F" />

    </RelativeLayout>
    <View
        android:id="@+id/viewTwo"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#D0616161"
        />

    <RelativeLayout
        android:id="@+id/Three_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:paddingStart="20dp">

        <ImageView
            android:id="@+id/img_three"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:srcCompat="@drawable/four_grid" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:layout_marginTop="-9dp"
            android:layout_toRightOf="@id/img_three"
            android:text="4"
            android:textSize="27sp"
            android:textColor="#D0423F3F" />

    </RelativeLayout>
<!--    <View-->
<!--        android:id="@+id/viewThree"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginTop="5dp"-->
<!--        android:layout_marginBottom="5dp"-->
<!--        android:layout_marginRight="10dp"-->
<!--        android:layout_marginLeft="10dp"-->
<!--        android:background="#D0616161"-->
<!--        />-->

    <View

        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

</LinearLayout>